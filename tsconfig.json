{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "lib",
    "demos/todos/todos.ts",
    "demos/todos/todo.ts",
    "demos/spreadsheet/spreadsheet.ts",
    "demos/counter/counter.ts",
    "demos/user-info/user-info.ts",
    "vite-env.d.ts"
  ]
}
